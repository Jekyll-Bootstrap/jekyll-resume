---
layout: null
---

<?xml version="1.0" encoding="UTF-8" ?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.title | xml_escape }}</title>
    <link>{{ site.url | xml_escape }}</link>
    <description>{{ site.description | xml_escape }}</description>
    <link rel="self" href="{{ site.url }}/feed.xml" type="application/rss+xml" />
    <lastBuildDate>{{ site.time | date_to_rfc822 | xml_escape }}</lastBuildDate>
    {% assign valid_posts = site.posts | where_exp:"post", "post.title and post.url and post.content and post.date" %}

    {% for post in site.posts %}
      <item>
        <title>{{ post.title | xml_escape | replace: '&', '&amp;' | replace: '<', '&lt;' | replace: '>', '&gt;' }}</title>
        <link>{{ post.url | absolute_url | xml_escape }}</link>
        <guid isPermaLink="true">{{ post.url | absolute_url | xml_escape }}</guid>
        <pubDate>{{ post.date | date_to_rfc822 | xml_escape }}</pubDate>
        <description>{{ post.content | xml_escape }}</description>
      </item>
    {% endfor %}
  </channel>
</rss>
